 }

  DistanceR2 = DistanceR1;
  DistanceR3 = DistanceR2;
  DistanceR4 = DistanceR3;
  DistanceR5 = DistanceR4;
  DistanceR6 = DistanceR5;
  DistanceR7 = DistanceR6;
  DistanceR8 = DistanceR7;
  DistanceR9 = DistanceR8;
  DistanceR10 = DistanceR9;

  S1LastState = S1State;


 delay (50);
}
