  Time7 = millis();}

  if(S1State == 8){
  MIDI.sendNoteOff(Midi8, 0, 2); MIDI.sendNoteOn(Midi8, 100, 2);
  DmxSimple.write(1, 0); DmxSimple.write(4, 0); DmxSimple.write(7, 0); DmxSimple.write(10, 0); DmxSimple.write(13, 0); DmxSimple.write(16, 0); DmxSimple.write(19, 0); DmxSimple.write(22, 0);
   DmxSimple.write(2, 255); DmxSimple.write(5, 255); DmxSimple.write(8, 255); DmxSimple.write(11, 255); DmxSimple.write(14, 170); DmxSimple.write(17, 85); DmxSimple.write(20, 0); DmxSimple.write(23, 0);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 85); DmxSimple.write(18, 170); DmxSimple.write(21, 255); DmxSimple.write(24, 255);
  Time8 = millis();}

  if(S1State == 9){
  MIDI.sendNoteOff(Midi9, 0, 2); MIDI.sendNoteOn(Midi9, 100, 2);
  DmxSimple.write(1, 0); DmxSimple.write(4, 0); DmxSimple.write(7, 0); DmxSimple.write(10, 0); DmxSimple.write(13, 0); DmxSimple.write(16, 0); DmxSimple.write(19, 0); DmxSimple.write(22, 0);
   DmxSimple.write(2, 255); DmxSimple.write(5, 255); DmxSimple.write(8, 255); DmxSimple.write(11, 255); DmxSimple.write(14, 255); DmxSimple.write(17, 255); DmxSimple.write(20, 170); DmxSimple.write(23, 85);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 0); DmxSimple.write(18, 0); DmxSimple.write(21, 85); DmxSimple.write(24, 170);
  Time9 = millis();}

  if(S1State == 10){
  MIDI.sendNoteOff(Midi10, 0, 2); MIDI.sendNoteOn(Midi10, 100, 2);
  DmxSimple.write(1, 85); DmxSimple.write(4, 0); DmxSimple.write(7, 0); DmxSimple.write(10, 0); DmxSimple.write(13, 0); DmxSimple.write(16, 0); DmxSimple.write(19, 0); DmxSimple.write(22, 0);
   DmxSimple.write(2, 170); DmxSimple.write(5, 255); DmxSimple.write(8, 255); DmxSimple.write(11, 255); DmxSimple.write(14, 255); DmxSimple.write(17, 255); DmxSimple.write(20, 255); DmxSimple.write(23, 170);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 0); DmxSimple.write(18, 0); DmxSimple.write(21, 0); DmxSimple.write(24, 85);
  Time10 = millis();}

  //------------------------------------------------------------------------------------------------------------------------------------RED SECTIONS------------------------------------------------------------------------------------------------------------------------------------

  if(S1State == 11){
  MIDI.sendNoteOff(Midi11, 0, 2); MIDI.sendNoteOn(Midi11, 100, 2);
  DmxSimple.write(1, 255); DmxSimple.write(4, 170); DmxSimple.write(7, 85); DmxSimple.write(10, 0); DmxSimple.write(13, 0); DmxSimple.write(16, 0); DmxSimple.write(19, 0); DmxSimple.write(22, 0);
   DmxSimple.write(2, 0); DmxSimple.write(5, 85); DmxSimple.write(8, 170); DmxSimple.write(11, 255); DmxSimple.write(14, 255); DmxSimple.write(17, 255); DmxSimple.write(20, 255); DmxSimple.write(23, 255);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 0); DmxSimple.write(18, 0); DmxSimple.write(21, 0); DmxSimple.write(24, 0);
  Time11 = millis();}

  if(S1State == 12){
  MIDI.sendNoteOff(Midi12, 0, 2); MIDI.sendNoteOn(Midi12, 100, 2);
  DmxSimple.write(1, 255); DmxSimple.write(4, 255); DmxSimple.write(7, 255); DmxSimple.write(10, 170); DmxSimple.write(13, 85); DmxSimple.write(16, 0); DmxSimple.write(19, 0); DmxSimple.write(22, 0);
   DmxSimple.write(2, 0); DmxSimple.write(5, 0); DmxSimple.write(8, 0); DmxSimple.write(11, 85); DmxSimple.write(14, 170); DmxSimple.write(17, 255); DmxSimple.write(20, 255); DmxSimple.write(23, 255);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 0); DmxSimple.write(18, 0); DmxSimple.write(21, 0); DmxSimple.write(24, 0);
  Time12 = millis();}

  if(S1State == 13){
  MIDI.sendNoteOff(Midi13, 0, 2); MIDI.sendNoteOn(Midi13, 100, 2);
  DmxSimple.write(1, 255); DmxSimple.write(4, 255); DmxSimple.write(7, 255); DmxSimple.write(10, 255); DmxSimple.write(13, 170); DmxSimple.write(16, 85); DmxSimple.write(19, 0); DmxSimple.write(22, 0);
   DmxSimple.write(2, 0); DmxSimple.write(5, 0); DmxSimple.write(8, 0); DmxSimple.write(11, 0); DmxSimple.write(14, 85); DmxSimple.write(17, 170); DmxSimple.write(20, 255); DmxSimple.write(23, 255);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 0); DmxSimple.write(18, 0); DmxSimple.write(21, 0); DmxSimple.write(24, 0);
  Time13 = millis();}

  if(S1State == 14){
  MIDI.sendNoteOff(Midi14, 0, 2); MIDI.sendNoteOn(Midi14, 100, 2);
  DmxSimple.write(1, 255); DmxSimple.write(4, 255); DmxSimple.write(7, 255); DmxSimple.write(10, 255); DmxSimple.write(13, 255); DmxSimple.write(16, 255); DmxSimple.write(19, 170); DmxSimple.write(22, 85);
   DmxSimple.write(2, 0); DmxSimple.write(5, 0); DmxSimple.write(8, 0); DmxSimple.write(11, 0); DmxSimple.write(14, 0); DmxSimple.write(17, 0); DmxSimple.write(20, 85); DmxSimple.write(23, 170);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 0); DmxSimple.write(18, 0); DmxSimple.write(21, 0); DmxSimple.write(24, 0);
  Time14 = millis();}

  if(S1State == 15){
  MIDI.sendNoteOff(Midi15, 0, 2); MIDI.sendNoteOn(Midi15, 100, 2);
  DmxSimple.write(1, 255); DmxSimple.write(4, 255); DmxSimple.write(7, 255); DmxSimple.write(10, 255); DmxSimple.write(13, 255); DmxSimple.write(16, 255); DmxSimple.write(19, 255); DmxSimple.write(22, 255);
   DmxSimple.write(2, 0); DmxSimple.write(5, 0); DmxSimple.write(8, 0); DmxSimple.write(11, 0); DmxSimple.write(14, 0); DmxSimple.write(17, 0); DmxSimple.write(20, 0); DmxSimple.write(23, 0);
    DmxSimple.write(3, 0); DmxSimple.write(6, 0); DmxSimple.write(9, 0); DmxSimple.write(12, 0); DmxSimple.write(15, 0); DmxSimple.write(18, 0); DmxSimple.write(21, 0); DmxSimple.write(24, 0);
